<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="mb-2">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark px-5">
          <%= link_to "Bookers", root_path, class:"nav-link text-light navbar-brand"%>
          <ul class="navbar-nav ml-auto">
            <% if user_signed_in? %>
              <li>
                <%= link_to user_path(current_user), class:"nav-link text-light font-weight-bold" do%>
                  <i class="fas fa-home"></i>
                  Home
                <% end %>
              </li>
              <li>
                <%= link_to users_path, class:"nav-link text-light font-weight-bold" do%>
                  <i class="fas fa-users"></i>
                  Users
                <% end %>
              </li>
              <li>
                <%= link_to books_path, class:"nav-link text-light font-weight-bold" do%>
                  <i class="fas fa-book-open"></i>
                  Books
                <% end %>
              </li>
              <li>
                <%= link_to destroy_user_session_path, method: :delete, class:"nav-link text-light font-weight-bold" do %>
                  <i class="fas fa-sign-out-alt"></i>
                  Log out
                <% end %>
              </li>
          <% else %>
              <li>
                <%= link_to root_path, class:"nav-link text-light font-weight-bold" do%>
                  <i class="fas fa-home"></i>
                  Home
                <% end %>
              </li>
              <li>
                <%= link_to about_path, class:"nav-link text-light font-weight-bold" do %>
                  <i class="fas fa-link"></i>
                  About
                <% end %>
              </li>
              <li>
                <%= link_to new_user_registration_path, class:"nav-link text-light font-weight-bold" do%>
                  <i class="fas fa-user-plus"></i>
                  Sign up
                <% end %>
              </li>
              <li>
                <%= link_to new_user_session_path, class:"nav-link text-light font-weight-bold" do%>
                  <i class="fas fa-sign-in-alt"></i>
                  Log in
                <% end %>
              </li>
          <% end %>
          </ul>
        </nav>
  </header>
  <p class="notice text-success"> <%= notice %> </p>
    <%= yield %>
  </body>
  <footer class="row">
    <p class="mx-auto mt-5">CopyRight Infratop.inc</p>
  </footer>
</html>
