<div class="container">
  <h2>
    User info
  </h2>
  <%= image_tag user.get_profile_image(100,100) %>
  <table class="table">
    <tbody>
      <tr>
        <th>Name</th>
        <th><%= user.name %></th>
      </tr>
      <tr>
        <th>Introduction</th>
        <th><%= user.introduction %></th>
      </tr>
    </tbody>
  </table>
  <%= link_to edit_user_path(user), class:"btn btn-outline-secondary btn-block w-100" do %>
    <span class="fas fa-user-cog"></span>
  <% end %>
</div>