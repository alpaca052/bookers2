<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'user_info', user: @user %>
      <h2 class="my-3">New book</h2>
      <%= render 'books/new_book', book: @book %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
          </tr>
        </thead>
        <% @users.each do |user| %>
          <tr>
            <td>
              <%= image_tag user.get_profile_image(50, 50) %>
            </td>
            <td>
              <%= user.name %>
            </td>
            <td>
              <%= link_to "Show", user_path(user.id) %>
            </td>
          </tr>
          <% end %>
      </table>
    </div>
  </div>
</div>